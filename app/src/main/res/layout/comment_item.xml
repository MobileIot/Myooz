<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/comment_card_view"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="6dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="141dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/comment_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:textColor="@color/title"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/comment_subtitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:textColor="@color/subtitle"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/comment_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="start"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/inactive"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/comment_kudos"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="8dp"
                    android:background="@drawable/ic_favorited_black_24dp"
                    android:backgroundTint="@color/primary"
                    android:text="B" />

                <Button
                    android:layout_marginLeft="20dp"
                    android:id="@+id/comment_share"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="8dp"
                    android:background="@drawable/ic_share_black_24dp"
                    android:backgroundTint="@color/primary"
                    android:text="K" />

            </LinearLayout>
        </LinearLayout>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/comment_pic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            fresco:placeholderImage="@drawable/ic_local_activity_black_24dp" />

    </LinearLayout>


</android.support.v7.widget.CardView>